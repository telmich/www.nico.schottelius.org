[alias]
   a  = add
   b  = branch
   ba = branch -a
   bi = bisect
   c  = commit -s
   cl = clone
   ca = commit -a -s
   co = checkout
   d  = diff
   dc = diff --color
   f  = fetch
   l  = log
   lc  = log --color
   lp = log -p --abbrev-commit
   lpc = log -p --color --abbrev-commit
   p  = push
   s  = status
   t  = tag

