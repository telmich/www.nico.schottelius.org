[alias]
   a  = add
   b  = branch
   ba = branch -a
   bi = bisect
   c  = commit -s
   cl = clone
   ca = commit -a -s
   co = checkout
   d  = diff
   dc = diff --color
   f  = fetch

   l     = log

   lc    = log --color
   ln    = log --name-only
   lo    = log --pretty=oneline
   lp    = log -p --abbrev-commit

   loc   = log --color --pretty=oneline
   lpc   = log -p --color --abbrev-commit

   m     = merge
   p  = push
   pl = pull
   r  = reset
   s  = status
   t  = tag

[core]
   excludesfile = /home/users/nico/.gitignore-global

[user]
   email = nico@kr.ethz.ch
   name = Nico Schottelius

[http]
   sslVerify=false

[pager]
   status = true

[merge]
	tool = vimdiff

[push]
	default = matching
