[alias]
   a  = add
   b  = branch
   ba = branch -a
   bi = bisect
   c  = commit -s
   cl = clone
   ca = commit -a -s
   co = checkout
   d  = diff
   dc = diff --color
   f  = fetch

   l     = log
   lc    = log --color
   ln    = log --name-only
   lo    = log --pretty=oneline
   lp    = log -p --abbrev-commit
   loc   = log --color --pretty=oneline
   lol   = log --pretty=oneline --abbrev-commit --graph --decorate
   lpc   = log -p --color --abbrev-commit

   m  = merge
   p  = push
   pl = pull
   pnp = !git pull && git push
   r  = reset
   s  = status
   t  = tag

   # Useful for SVN operation
   srb = svn rebase
   sdc = svn dcommit
   srd = !git svn rebase && git svn dcommit

[core]
   excludesfile = /home/users/nico/.gitignore-global

[http]
   sslVerify=false

[pager]
   status = true

[merge]
	tool = vimdiff

[push]
	default = matching

[color]
	ui = auto

#
# PRIVATE STUFF - probably not usable for you
