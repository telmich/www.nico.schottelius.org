#!/bin/sh
# Nico Schottelius
# cinit: create gettys

# init variables
. $(dirname $0)/cinit.read-conf

BASEDIR=$DESTDIR/$CINIT_DIR/$GETTY_DIR
NUMBER=$(cd $BASEDIR; echo * | sed 's/.* //')

[ ! "$NUMBER" ] && exit 1

DDIR=$BASEDIR/$NUMBER

echo "Removing getty number $NUMBER located in $DDIR ..."
read -p "Are you sure [y/N]? " yes

if [ "$yes" = "y" ]; then
   rm -r $DDIR
else
   echo "Aborted."
fi
