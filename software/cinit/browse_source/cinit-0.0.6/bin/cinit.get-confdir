#!/bin/sh
# Nico Schottelius
# cinit: read configuration into variables
# 2005-05-24 

# try environment first
if [ "$CINIT_DIR" ]; then
   CONFDIR=$CINIT_DIR
elif [ -d $(dirname $0)/../conf/ ]; then
   CONFDIR=$(dirname $0)/../conf/
elif [ -d /etc/cinit ]; then
   CONFDIR=/etc/cinit
else
   echo Did not find cinit configuration 1>&2
   exit 1
fi

echo $CONFDIR
